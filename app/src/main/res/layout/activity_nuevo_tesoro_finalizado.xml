<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ar.com.cazarecompensas.cazarecompensas.NuevoTesoroFinalizado"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">




    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/textTituloTesoroFinalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Felicitaciones"
        android:textAlignment="center"
        android:textSize="40dp"/>


    <TextView
        android:id="@+id/textSubtituloTesoroFinalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Su tesoro fue guardado con exito"
        android:textAlignment="center"

        android:textSize="12dp"/>

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/textNombreTesoroFinalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Nombre: Patoruzo" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textDescripcionTesoroFinalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Descripcion: Hermoso juguete" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textRecompensaTesoroFinalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Total: $200" />


    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/textComisionAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:textSize="10dp"
        android:text="*Incluye un adicional de 10% por costo de servicio" />


    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/botonVolverHomeFinalizado"
        android:layout_width="match_parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Volver al home" />
</LinearLayout>
